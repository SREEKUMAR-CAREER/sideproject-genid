rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    
    function isValidPDF() {
      return request.resource.contentType == 'application/pdf' &&
             request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    // Company logos
    match /companies/{companyId}/logo/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && isValidImage();
    }
    
    // Template uploads
    match /templates/{companyId}/{templateId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (isValidImage() || isValidPDF());
    }
    
    // Employee photos
    match /submissions/{companyId}/{submissionId}/photo.{ext} {
      allow read: if true;
      allow write: if isValidImage();
    }
    
    // Generated PDFs
    match /cards/{companyId}/{cardId}.pdf {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
